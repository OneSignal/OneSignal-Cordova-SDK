{
  "version": "5.2.19",
  "name": "onesignal-cordova-plugin",
  "author": "Josh Kasten, Brad Hesse, Rodrigo Gomez-Palacio",
  "files": [
    "dist",
    "plugin.xml",
    "src",
    "build-extras-onesignal.gradle"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OneSignal/OneSignal-Cordova-SDK.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun run build:vite",
    "build:tsc": "tsc --project tsconfig.prod.json",
    "build:vite": "vite build",
    "format:spotless": "./example/IonicCapOneSignal/android/gradlew spotlessApply",
    "format:prettier": "prettier --write \"**/*.{ts,tsx}\" --ignore-path .gitignore",
    "format": "concurrently \"npm:format:spotless\" \"npm:format:prettier\"",
    "format:check:spotless": "./example/IonicCapOneSignal/android/gradlew spotlessCheck",
    "format:check:prettier": "prettier --check \"**/*.{ts,tsx}\" --ignore-path .gitignore",
    "format:check": "concurrently \"npm:format:check:spotless\" \"npm:format:check:prettier\"",
    "lint": "oxlint ./www ./example/IonicCapOneSignal && bun run format:check",
    "lint:fix": "oxlint ./www /example/IonicCapOneSignal --fix && bun run format",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/cordova": "^11.0.3",
    "@vitest/coverage-v8": "^4.0.2",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.0.8",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.2"
  },
  "bugs": {
    "url": "https://github.com/OneSignal/OneSignal-Cordova-SDK/issues"
  },
  "cordova": {
    "id": "onesignal-cordova-plugin",
    "platforms": [
      "android",
      "ios",
      "amazon-fireos"
    ]
  },
  "cordova_name": "OneSignal Push Notifications",
  "description": "OneSignal is a high volume Push Notification service for mobile apps. In addition to basic notification delivery, OneSignal also provides tools to localize, target, schedule, and automate notifications that you send.",
  "engines": [
    {
      "name": "cordova-android",
      "version": ">=4.0.0"
    },
    {
      "name": "apple-xcode",
      "version": ">=8.0.0"
    },
    {
      "name": "apple-ios",
      "version": ">=7.0.0"
    },
    {
      "name": "cordova",
      "version": ">=6.4.0"
    },
    {
      "name": "cordova-ios",
      "version": ">=4.3.0"
    }
  ],
  "homepage": "https://github.com/OneSignal/OneSignal-Cordova-SDK#readme",
  "keywords": [
    "push",
    "notification",
    "push notification",
    "push notifications",
    "apns",
    "gcm",
    "adm",
    "retention",
    "messaging",
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios",
    "cordova-amazon-fireos"
  ],
  "license": "MIT",
  "platforms": [
    "android",
    "ios",
    "amazon-fireos"
  ]
}
